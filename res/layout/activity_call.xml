<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#CC3399FF"
        android:text="@string/call_activity_des" />
    <!-- To get the focus -->
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/call_alert_tv"
        android:textColor="#CCFF0000"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <CheckBox 
            android:id="@+id/call_days_before_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCBClick" />
        
        <EditText
            android:id="@+id/call_days_before_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="13sp"
            android:inputType="number"
            android:maxLines="1"
            android:text="@string/call_input_number"
            android:textColor="#D9D9D9"
            android:enabled="false" />
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textSize="17sp"
            android:layout_weight="7"
            android:text="@string/call_days_before"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <CheckBox 
            android:id="@+id/call_days_between_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call_days_between"
            android:onClick="onCBClick" />

        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <EditText
	            android:id="@+id/call_days_between_et1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:editable="false"
	            android:maxLines="1"
	            android:text="@string/call_select_date"
	            android:textColor="#D9D9D9"
	            android:enabled="false" >
        	</EditText>
        	<EditText
        	    android:layout_below="@id/call_days_between_et1"
	            android:id="@+id/call_days_between_et2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:editable="false"
	            android:maxLines="1"
	            android:text="@string/call_select_date"
	            android:textColor="#D9D9D9"
	            android:enabled="false" >
        	</EditText>
        </RelativeLayout>
    </LinearLayout>
    <CheckBox 
        android:id="@+id/call_delete_strange_call_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call_delete_strange_call"
        android:onClick="onCBClick" />
    
	<CheckBox 
        android:id="@+id/call_filter_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call_enable_filter"
        android:onClick="onCBClick" />
	
	<LinearLayout
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp" >
	    <TextView 
	        android:id="@+id/call_reserve_tv"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:maxLines="1"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:clickable="true"
	        android:focusable="true"
	        android:enabled="false"
	        android:text="@string/call_reserve"
	        android:onClick="addReserveList" />
	    <TextView 
	        android:id="@+id/call_delete_tv"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:maxLines="1"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:clickable="true"
	        android:focusable="true"
	        android:enabled="false"
	        android:text="@string/call_delete"
	        android:onClick="addDeleteList" />
	</LinearLayout>
	<LinearLayout
	    android:layout_marginLeft="5dp"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false" >
	    <ListView 
	        android:id="@+id/call_reserve_list"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:paddingRight="10dp"
	        android:paddingLeft="10dp"
	        android:layout_height="wrap_content"
	        android:scrollbars="vertical" />
	    <ListView 
	        android:id="@+id/call_delete_list"
	        android:layout_weight="1"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:scrollbars="vertical" />
	</LinearLayout>
    
</LinearLayout>
